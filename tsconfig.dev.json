{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@/components/*": ["./src/components/*"],
			"@/lib/*": ["./src/lib/*"],
			"@/hooks/*": ["./src/hooks/*"],
			"@/styles/*": ["./src/styles/*"],
			"@/utils/*": ["./src/lib/utils/*"],
			"@/localization/*": ["./src/lib/localization/*"]
		},
		"strict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"sourceMap": true,
		"declaration": false,
		"declarationMap": false,
		"removeComments": false
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"scripts/**/*.ts",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules", ".next", "dist", "build"]
}
